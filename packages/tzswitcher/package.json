{
	"name": "@postgresql-typed/tzswitcher",
	"version": "0.3.0",
	"description": "A PostgreSQL-Typed extension to switch the timezone of a column from one to another",
	"type": "module",
	"exports": {
		".": "./lib/index.js",
		"./register": {
			"types": "./register.d.ts",
			"import": "./register.js",
			"require": "./register.cjs"
		},
		"./package.json": "./package.json"
	},
	"types": "./lib/index.d.ts",
	"license": "MPL-2.0",
	"author": {
		"name": "Bas950",
		"email": "me@bas950.com",
		"url": "https://bas950.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PostgreSQL-Typed/PostgreSQL-Typed.git",
		"directory": "packages/tzswitcher"
	},
	"bugs": {
		"url": "https://github.com/PostgreSQL-Typed/PostgreSQL-Typed/issues"
	},
	"files": [
		"lib",
		"register.*"
	],
	"keywords": [
		"postgresql",
		"keyv",
		"typed",
		"types",
		"typescript"
	],
	"scripts": {
		"dev": "tsc -w",
		"build": "tsc",
		"lint": "eslint --ext .ts ./ && prettier --check .",
		"lint:fix": "eslint --fix --ext .ts ./ && prettier -w .",
		"test": "vitest --run",
		"test:watch": "vitest --ui --coverage",
		"test:ci": "vitest --run --coverage"
	},
	"dependencies": {
		"@postgresql-typed/parsers": "workspace:*",
		"@postgresql-typed/util": "workspace:*",
		"luxon": "^3.4.3",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@postgresql-typed/cli": "workspace:*",
		"@postgresql-typed/core": "workspace:*",
		"@types/luxon": "^3.3.3",
		"@types/node": "^20.8.10",
		"typescript": "^5.2.2"
	},
	"publishConfig": {
		"provenance": true
	},
	"packageManager": "pnpm@8.9.0",
	"engines": {
		"node": ">=16",
		"pnpm": ">=8.6.0"
	}
}
