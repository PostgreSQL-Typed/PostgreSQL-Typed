{
	"private": true,
	"name": "postgresql-typed",
	"version": "1.0.0",
	"description": "A type-safe PostgreSQL client for Node.js",
	"type": "module",
	"exports": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"license": "MPL-2.0",
	"author": {
		"name": "Bas950",
		"email": "me@bas950.com",
		"url": "https://bas950.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PostgreSQL-Typed/PostgreSQL-Typed.git",
		"directory": "packages/postgresql-typed"
	},
	"bugs": {
		"url": "https://github.com/PostgreSQL-Typed/PostgreSQL-Typed/issues"
	},
	"files": [
		"lib"
	],
	"keywords": [
		"postgresql",
		"pg",
		"typed",
		"types",
		"typescript"
	],
	"scripts": {
		"dev": "tsc -w",
		"build": "tsc",
		"build:util": "cd util && tsc",
		"lint": "eslint --fix --ext .ts ./ && prettier -w .",
		"lint:ci": "eslint --ext .ts ./ && prettier --check .",
		"test": "vitest --run",
		"test:watch": "vitest --ui --coverage",
		"test:ci": "vitest --run --coverage",
		"test:prepare": "pnpm run build:util && pnpm run gen-types",
		"gen-types": "pnpm run gen-types:setup && pnpm run gen-types:run && pnpm run gen-types:clean",
		"gen-types:setup": "cd util/dist && node createTable.js && node removeOld.js",
		"gen-types:run": "pgtg generate",
		"gen-types:clean": "cd util/dist && node deleteTable.js && node fixImports.js"
	},
	"dependencies": {
		"pg": "^8.7.3"
	},
	"devDependencies": {
		"@types/pg": "^8.6.5",
		"source-map-support": "^0.5.21",
		"typescript": "^4.7.4",
		"zod": "^3.18.0",
		"postgresql-types-generator": "workspace:*",
		"postgresql-type-parsers": "workspace:*"
	},
	"peerDependencies": {
		"zod": "^3.18.0"
	},
	"peerDependenciesMeta": {
		"zod": {
			"optional": true
		}
	}
}
