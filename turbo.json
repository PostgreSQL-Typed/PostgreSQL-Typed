{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["lint:ci"],
			"outputs": ["lib/**", "dist/**"]
		},
		"lint": {},
		"lint:ci": {},
		"test": {
			"dependsOn": ["lint:ci"],
			"outputs": ["coverage/**"]
		},
		"test:watch": {
			"cache": false
		},
		"test:ci": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"]
		}
	},
	"globalDependencies": ["tsconfig.json", "vitest.config.ts", ".eslintrc"]
}
